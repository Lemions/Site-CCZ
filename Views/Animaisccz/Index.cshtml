@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<SiteCCZ.Models.Animaisccz>

@{
    ViewData["Title"] = "Index";
}

<h1>Animais do CCZ</h1>

<p>
    <a asp-action="Create">Cadastrar novo animal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Espécie
            </th>
            <th>
                Nome
            </th>
            <th>
               Status do Animal
            </th>
            <th>
                Adotável?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusAnimal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adotavel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAnimal">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdAnimal">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAnimal">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

@Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }))