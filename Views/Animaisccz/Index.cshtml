@model IEnumerable<SiteCCZ.Models.Animaisccz>

@{
    ViewData["Title"] = "Index";
}

<h1>Animais do CCZ</h1>

<p>
    <a asp-action="Create">Cadastrar novo animal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Especie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdadeAprox)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Porte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Historia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adotavel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdadeAprox)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Porte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Historia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusAnimal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adotavel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAnimal">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdAnimal">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAnimal">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
