@model IEnumerable<SiteCCZ.Models.Postsblog>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de posts</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataPublicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conteudo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoImagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataPublicacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoImagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPostBlog">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPostBlog">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPostBlog">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
