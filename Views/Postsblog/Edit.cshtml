@model SiteCCZ.Models.Postsblog

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar post</h1>

<h4>Postsblog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataPublicacao" class="control-label">Data de publicação</label>
                <input asp-for="DataPublicacao" class="form-control" type="date" required/>
                <span asp-validation-for="DataPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" required/>
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Conteudo" class="control-label">Conteúdo do post</label>
                <input asp-for="Conteudo" class="form-control" required/>
                <span asp-validation-for="Conteudo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Imagem</label>
                <input type="file" name="pic" class="file-chooser form-control" value="@ViewData["filelocation"]" accept="image/*" required />
            </div>

            <img class="preview-img" src="@ViewData["filelocation"]?ver=1.3" />

            <div class="form-group">
                <label asp-for="DescricaoImagem" class="control-label">Descrição da imagem (Acessibilidade)</label>
                <input asp-for="DescricaoImagem" class="form-control" required/>
                <span asp-validation-for="DescricaoImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de posts</a>
</div>

<!-- Script para pré-visualização de imagem -->
<script>
    const $ = document.querySelector.bind(document);
    const previewImg = $('.preview-img');
    const fileChooser = $('.file-chooser');

    fileChooser.onchange = e => {
        const fileToUpload = e.target.files.item(0);
        const reader = new FileReader();

        reader.onload = e => previewImg.src = e.target.result;

        reader.readAsDataURL(fileToUpload);
    };
</script>
