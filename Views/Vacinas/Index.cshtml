@model IEnumerable<SiteCCZ.Models.Vacinas>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Vacinas</h1>

<p>
    <a asp-action="Create">Cadastrar vacina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Periodicidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodicidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doses)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVacina">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdVacina">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVacina">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
