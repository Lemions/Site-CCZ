@model SiteCCZ.Models.Vacinas

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir vacina</h1>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Vacinas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Periodicidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Periodicidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doses)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doses)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdVacina" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para lista de vacinas</a>
    </form>
</div>
