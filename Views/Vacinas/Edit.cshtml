@model SiteCCZ.Models.Vacinas

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar vacina</h1>

<h4>Vacinas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVacina" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodicidade" class="control-label"></label>
                <input asp-for="Periodicidade" class="form-control" type="number"/>
                <span asp-validation-for="Periodicidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doses" class="control-label"></label>
                <input asp-for="Doses" class="form-control" type="number"/>
                <span asp-validation-for="Doses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de vacinas</a>
</div>

