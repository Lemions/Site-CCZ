@model SiteCCZ.Models.Vermifugos

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir vermífugo</h1>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Vermifugos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Periodicidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Periodicidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdVermifugo" />
