@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<SiteCCZ.Models.Contatosadocao>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos de adoção</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Email
            </th>
            <th>
                Telefone
            </th>
            <th>
                Justificativa
            </th>
            <th>
                Id do Animal
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Justificativa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAnimalNavigation.IdAnimal)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdContatoAdocao">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdContatoAdocao">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

@Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }))