@model IEnumerable<SiteCCZ.Models.Contatosadocao>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos de adoção</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Justificativa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAnimalNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Justificativa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAnimalNavigation.IdAnimal)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdContatoAdocao">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdContatoAdocao">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
